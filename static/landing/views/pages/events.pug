extends ./../index.pug

block main-content
  div.events-page-wrapper
    h1
      | Фестивали
    if eventsData.length
      each eventData, index in eventsData
        div.event-header
          h2= eventData.title
          div.event-header-bottom-container
            b.date= eventData.dateString
            if logedInUserData
              - var linkText = requestData ? 'Открыть вашу заявку' : 'Подать заявку'
              - var linkSrc = requestData ? '/events/request/' + requestData.uid : '/events/' + eventData.uid + '/' + 'add_request'
              a.request-link(href=linkSrc)= linkText

        div.event-html-wrapper!= eventData.html

block after-index-script
  script(src='/dist/js/landing-events.js')